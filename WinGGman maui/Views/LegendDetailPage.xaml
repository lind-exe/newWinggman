<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WinGGman_maui.Views.LegendDetailPage"
             xmlns:viewmodel="clr-namespace:WinGGman_maui.ViewModels"
             x:DataType="viewmodel:PlayerStatsViewModel"
             Title="LegendDetailPage">
    <VerticalStackLayout>

        <Image Source="{Binding Metadata.bgImageUrl}"
               />
        <Label Text="{Binding Metadata.name}"
               HorizontalOptions="Center"
               FontFamily="Expressway"
               FontSize="Header"
               />

        <Grid HorizontalOptions="Center"
              RowDefinitions="auto, auto, auto"
              ColumnDefinitions="auto, auto"
              Padding="20"
              ColumnSpacing="50">

            <Label Grid.Row="0"
               Text="{Binding Stats.matchesPlayed.displayName}"
                   
               TextColor="{Binding Metadata.LegendColor}"
               FontSize="25"
               FontFamily="Expressway"
               HorizontalOptions="Center"
               />
            <Label Grid.Row="0" Grid.Column="1"
               Text="{Binding Stats.matchesPlayed.value}"
                   FontFamily="Expressway"
               FontSize="25"
               HorizontalOptions="Center"
               />
            <Label Grid.Row="1"
               Text="{Binding Stats.kills.displayName}"
                   FontFamily="Expressway"
               FontSize="25"
               HorizontalOptions="Center"
               />
            <Label Grid.Row="1" Grid.Column="1"
                   FontFamily="Expressway"
               Text="{Binding Stats.kills.value}"
               FontSize="25"
               HorizontalOptions="Center"
               />
            <Label Grid.Row="2"
                   FontFamily="Expressway"
               Text="{Binding Stats.damage.displayName}"
               FontSize="25"
               HorizontalOptions="Center"
               />
            <Label Grid.Row="2" Grid.Column="1"
                   FontFamily="Expressway"
               Text="{Binding Stats.damage.value}"
               FontSize="25"
               HorizontalOptions="Center"
               />

        </Grid>
    </VerticalStackLayout>
</ContentPage>