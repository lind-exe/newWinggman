<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WinGGman_maui.Views.PlayerStatsPage"
             xmlns:viewmodel="clr-namespace:WinGGman_maui.ViewModels"
             x:DataType="viewmodel:PlayerStatsViewModel"
             Title="PlayerStatsPage">
    <VerticalStackLayout
        
        Spacing="25"
        Padding="30,0"
        VerticalOptions="Center">

        <Label  Text="{Binding AllData[0].AllData[0].}"/>
        <ListView
            ItemsSource="{Binding AllData[0].AllData}"
            ItemSelected="OnListViewItemSelected">
            
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid Padding="10"
                              RowDefinitions="Auto, *"
                              ColumnDefinitions="200, 200, 100"
                              ColumnSpacing="20">

                        
                             <Image Grid.RowSpan="2"
                                    HeightRequest="200"
                                    Aspect="Fill"
                               Source="{Binding AllData}"/>
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>
</ContentPage>