<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WinGGman_maui.MainPage"
             BackgroundImageSource="bgimage.jpg">

    <VerticalStackLayout
        
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">


        <Image
                
                Source="winggmanlarge.png"
                HeightRequest="400"
                HorizontalOptions="Center" />

        <Entry
                x:Name="userName"
                 Placeholder="Enter username"
                 TextColor="Black"
                 FontAttributes="Bold"
                 FontFamily="Expressway"
                 BackgroundColor="AntiqueWhite"
                 HorizontalOptions="Center"
                 WidthRequest="340"
                 Text="Thelindd"/>
        <Entry
                x:Name="platform"
                 Placeholder="Enter platform"
                 TextColor="Black"
                 FontFamily="Expressway"
                 FontAttributes="Bold"
                 BackgroundColor="AntiqueWhite"
                 HorizontalOptions="Center"
                 WidthRequest="340"
                 Text="origin"
                 />


        <Button
                Style="{DynamicResource buttonStyle}"
                x:Name="RetrieveDataFromApi"
                Text="View my stats"
                FontFamily="Expressway"
                FontAttributes="Bold"
                Clicked="GetDataOnMainPageButtonClicked"
                HorizontalOptions="Center" />

    </VerticalStackLayout>
</ContentPage>

       